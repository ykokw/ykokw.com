---
import "@fontsource/biz-udgothic/files/biz-udgothic-latin-400-normal.woff2";
import "@fontsource/biz-udgothic/400.css";
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
interface Props {
  breadcrumbs?: string[];
}

const { breadcrumbs = [] } = Astro.props;
const breadcrumbsText = breadcrumbs.join(" / ");
const title = `Yuki Okawa (@ykokw)${breadcrumbsText}`;
---

<!doctype html>
<html lang="ja" class="h-screen h-dvh font-sans bg-midnight">
  <head prefix="og: https://ogp.me/ns/website#">
    <meta charset="UTF-8" />
    <meta name="description" content="Yuki Okawa's Home page" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta property="og:title" content={title} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.site} />
    <meta
      property="og:image"
      content={new URL("/images/ogp-dark.png", Astro.site)}
    />
  </head>
  <body class="px-2 flex flex-col h-full overflow-y-auto max-w-4xl mx-auto">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
