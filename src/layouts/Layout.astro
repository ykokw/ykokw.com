---
import "@fontsource-variable/noto-sans-jp";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Yuki Okawa's Home page" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="wrapper">
      <slot />
    </div>
  </body>
</html>
<style is:global>
  html {
    font-family: "Noto Sans JP Variable", sans-serif;
    background: var(
      --background,
      linear-gradient(180deg, #a6c1ee 0%, #e8d7df 95.83%, #ffdeda 100%)
    );
    height: 100vh;
    height: 100dvh;
  }
  body {
    margin: 0;
    display: flex;
    height: 100%;
    overflow-y: auto;
  }
	.wrapper {
		width: 100%;
		height: 100%;
		overflow-y: auto;
	}
</style>
