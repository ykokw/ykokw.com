---
import bizUDGothicLatin from "@fontsource/biz-udgothic/files/biz-udgothic-latin-400-normal.woff2";
import "@fontsource/biz-udgothic/400.css";
import "../styles/global.css";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head prefix="og: https://ogp.me/ns/website#">
    <link
      rel="preload"
      href={bizUDGothicLatin}
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <meta charset="UTF-8" />
    <meta name="description" content="Yuki Okawa's Home page" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta property="og:title" content={title} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.site} />
    <meta
      property="og:image"
      content={new URL("/images/ogp-dark.png", Astro.site)}
    />
  </head>
  <body>
    <div class="wrapper">
      <slot />
    </div>
  </body>
</html>
<style is:global>
  html {
    font-family: "Verdana", "BIZ UDGothic", system-ui;
    height: 100vh;
    height: 100dvh;
    transition: background-color 0.5s;
  }
  @media (prefers-color-scheme: light) {
    body {
      background: var(
        --bg-light,
        linear-gradient(
          180deg,
          #4f87c8 2.13%,
          #9abade 47.58%,
          #f1cb92 85.44%,
          #ffb97a 95.89%,
          #ff8d08 100%
        )
      );
    }
  }
  @media (prefers-color-scheme: dark) {
    body {
      background: var(
        --bg--dark,
        linear-gradient(
          180deg,
          #141517 13.64%,
          #464a61 59.53%,
          #696f73 79.11%,
          #a99b8c 94.05%,
          #ff933e 100%
        )
      );
    }
  }
  body {
    margin: 0;
    display: flex;
    height: 100%;
    overflow-y: auto;
  }
  .wrapper {
    width: 100%;
    height: 100%;
    overflow-y: auto;
  }
</style>
