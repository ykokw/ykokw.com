---
import "../styles/global.css";
import BaseLayout from "./BaseLayout.astro";

const { frontmatter } = Astro.props;
---

<BaseLayout breadcrumbs={frontmatter.breadcrumbs}>
  <main
    class:list={[
      "prose text-blue-white mb-8 max-w-full text-sm",
      "prose-headings:text-blue-white prose-headings:mb-2 prose-headings:mt-4 prose-headings:font-normal",
      "prose-h1:text-2xl prose-h1:mb-3",
      "prose-h2:text-xl",
      "prose-h3:text-lg",
      "prose-p:mb-2 prose-p:mt-0 prose-p:whitespace-pre-line",
      "prose-blockquote:text-blue-white prose-blockquote:opacity-70 prose-blockquote:*:before:content-[''] prose-blockquote:*:after:content-['']",
      "prose-ul:marker:text-blue-white prose-ol:text-blue-white",
      "prose-ol:marker:text-blue-white prose-ol:text-blue-white",
      "prose-a:text-blue-white prose-a:hover:text-light-blue prose-a:underline prose-a:transition-colors duration-500 ease-in-out",
      "prose-tr:border-dark-blue",
      "prose-thead:border-dark-blue prose-thead:border-b-2",
    ]}
  >
    <slot />
  </main>
</BaseLayout>
