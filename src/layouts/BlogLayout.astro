---
import "@fontsource/biz-udgothic/files/biz-udgothic-latin-400-normal.woff2";
import "@fontsource/biz-udgothic/400.css";
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
interface Props {
  breadcrumbs?: string[];
}

const { breadcrumbs = [] } = Astro.props;
const breadcrumbsText = breadcrumbs.join(" / ");
const title = `Yuki Okawa (@ykokw)${breadcrumbsText}`;
---

<!doctype html>
<html lang="ja" class="bg-midnight h-dvh h-screen font-sans">
  <head prefix="og: https://ogp.me/ns/website#">
    <meta charset="UTF-8" />
    <meta name="description" content="Yuki Okawa's Home page" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta property="og:title" content={title} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.site} />
    <meta
      property="og:image"
      content={new URL("/images/ogp-dark.png", Astro.site)}
    />
  </head>
  <body class="mx-auto flex h-full max-w-4xl flex-col overflow-y-auto px-2">
    <Header />
    <article
      class:list={[
        "prose text-blue-white mb-8 max-w-full text-sm",
        "prose-headings:text-blue-white prose-headings:mb-2 prose-headings:mt-4 prose-headings:font-normal",
        "prose-h1:text-2xl prose-h1:mb-3",
        "prose-h2:text-xl",
        "prose-h3:text-lg",
        "prose-p:mb-2 prose-p:mt-0",
        "prose-blockquote:text-blue-white prose-blockquote:opacity-70 prose-blockquote:*:before:content-[''] prose-blockquote:*:after:content-['']",
        "prose-ol:marker:text-blue-white prose-ol:text-blue-white",
        "prose-a:text-blue-white prose-a:hover:text-light-blue prose-a:underline prose-a:transition-colors duration-500 ease-in-out",
      ]}
    >
      <slot />
    </article>
    <Footer />
  </body>
</html>
