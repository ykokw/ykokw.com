---
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
  // 今後実装予定：実際のブログ記事データから動的パスを生成
  return [{ params: { slug: "sample-post" } }];
}

const { slug } = Astro.params;
const title = `${slug} | Yuki Okawa (@ykokw)`;
---

<Layout title={title}>
  <main>
    <h1>{slug}</h1>
    <div class="content">
      <p>ブログ記事ページ</p>
      <p>スラッグ: {slug}</p>
    </div>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
  .content {
    margin-top: 2rem;
  }
  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }
</style>
