---
import Layout from "../../layouts/Layout.astro";

const title = "Posts | Yuki Okawa (@ykokw)";
---

<Layout title={title}>
  <main>
    <h1>Posts</h1>
    <div class="content">
      <p>ブログ記事一覧ページ</p>
    </div>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
  .content {
    margin-top: 2rem;
  }
  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }
</style>
